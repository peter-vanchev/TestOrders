@using Orders.Core.Models
@model EditRestaurantViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" asp-action="Edit" method="post" enctype="multipart/form-data">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Form Element sizes -->
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Данни на ресторант</h3>
                        </div>
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <input type="hidden" asp-for="Id" class="form-control">
                            </div>

                            <label>Име на ресторанта</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input asp-for="Name" class="form-control">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                </div>
                                <input asp-for="PhoneNumner" class="form-control">
                                <span asp-validation-for="PhoneNumner" class="text-danger"></span>
                            </div>

                            <label>Адрес</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-check"></i></span>
                                </div>
                                <div class="input-group-prepend col-5">
                                    <input asp-for="Town" class="form-control">
                                    <span asp-validation-for="Town" class="text-danger"></span>
                                </div>
                                <div class=" input-group-prepend col-5">
                                    <input asp-for="Area" class="form-control">
                                    <span asp-validation-for="Area" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-check"></i></span>
                                </div>
                                <div class="col-5">
                                    <input asp-for="Street" class="form-control">
                                    <span asp-validation-for="Street" class="text-danger"></span>
                                </div>
                                <div class="col-5">
                                    <input asp-for="Number" class="form-control" />
                                    <span asp-validation-for="Number" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Category">Категория</label>
                                <span asp-validation-for="Category" class="text-danger"></span>
                                <select class="custom-select" name="Category">
                                    <option>Пицария</option>
                                    <option>Рибен</option>
                                    <option>Fast Food</option>
                                    <option>Италиански</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Описание на ресторанта</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info float-sm-right">Промени</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
