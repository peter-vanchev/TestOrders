@using Orders.Core.Models
@model OrderStatsModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Табло</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-6 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <p class="text-center">
                            <h3>Поръчки</h3>
                        </p>
                        <div class="progress-group">
                            Нови Поръчки - @Model.NewOrdersCount.ToString("F0")
                            <span class="float-right"><b>@Model.NewOrdersCount.ToString("F0")</b>/@Model.OrdersCount.ToString("F0")</span>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-primary" style="width: @Model.NewOrdersProogres.ToString("F2")%"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            Завършени Поръчки - @Model.EndOrdersCount.ToString("F0")
                            <span class="float-right"><b>@Model.EndOrdersCount.ToString("F0")</b>/@Model.OrdersCount.ToString("F0")</span>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-primary" style="width: @Model.EndOrdersProogres.ToString("F0")%"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            Отказани Поръчки - @Model.CancelledOrdersCount.ToString("F0")
                            <span class="float-right"><b>@Model.CancelledOrdersCount.ToString("F0")</b>/@Model.OrdersCount.ToString("F0")</span>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-primary" style="width: @Model.CancelledOrdersCount.ToString("F0")%"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            <h5>Всички Поръчки - <strong>@Model.OrdersCount.ToString("F0")</strong></h5>
                        </div>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a asp-controller="Order" asp-action="All" class="small-box-footer">Виж повече <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-6 col-6">

            <div class="card">
                <div class="card-header border-0">
                    <h3 class="card-title">Поръчки за деня</h3>
                    <div class="card-tools">
                        <a href="#" class="btn btn-sm btn-tool">
                            <i class="fas fa-download"></i>
                        </a>
                        <a href="#" class="btn btn-sm btn-tool">
                            <i class="fas fa-bars"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                        <p class="text-success text-xl">
                            <i class="ion ion-ios-refresh-empty"></i>
                        </p>
                        <p class="d-flex flex-column text-right">
                            <span class="font-weight-bold">
                                <i class="ion ion-android-arrow-up text-success"></i> 12%
                            </span>
                            <span class="text-muted">CONVERSION RATE</span>
                        </p>
                    </div>

                    <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                        <p class="text-warning text-xl">
                            <i class="ion ion-ios-cart-outline"></i>
                        </p>
                        <p class="d-flex flex-column text-right">
                            <span class="font-weight-bold">
                                <i class="ion ion-android-arrow-up text-warning"></i> 0.8%
                            </span>
                            <span class="text-muted">SALES RATE</span>
                        </p>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-0">
                        <p class="text-danger text-xl">
                            <i class="ion ion-ios-people-outline"></i>
                        </p>
                        <p class="d-flex flex-column text-right">
                            <span class="font-weight-bold">
                                <i class="ion ion-android-arrow-down text-danger"></i> 1%
                            </span>
                            <span class="text-muted">REGISTRATION RATE</span>
                        </p>
                    </div>

                </div>
            </div>
            </div>

            <!-- ./col -->
            <div class="col-lg-6 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.TotalSells.ToString("F2")<sup style="font-size: 20px">лв</sup></h3>
                        <p>Дневен оборот</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">Виж повече <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>


            <!-- ./col -->
        </div>
        <!-- /.row -->

    </div><!-- /.container-fluid -->
</section>


<hr />
<div class="row">
    <div class="col-md-4">
        <a class="btn btn-primary" asp-controller="Admin" asp-action="Index">Start</a>
    </div>
</div>



