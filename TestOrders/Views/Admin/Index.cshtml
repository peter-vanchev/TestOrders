@using Orders.Core.Models
@model OrderStatsModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Табло</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-6 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <p class="text-center">
                            <h3>Поръчки</h3>
                        </p>
                        <div class="progress-group">
                            Нови Поръчки - @Model.NewOrdersCount.ToString("F0")
                            <span class="float-right"><b>@Model.NewOrdersCount.ToString("F0")</b>/@Model.OrdersCount.ToString("F0")</span>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-primary" style="width: @Model.NewOrdersProogres.ToString("F2")%"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            Завършени Поръчки - @Model.EndOrdersCount.ToString("F0")
                            <span class="float-right"><b>@Model.EndOrdersCount.ToString("F0")</b>/@Model.OrdersCount.ToString("F0")</span>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-primary" style="width: @Model.EndOrdersProogres.ToString("F0")%"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            Отказани Поръчки - @Model.CancelledOrdersCount.ToString("F0")
                            <span class="float-right"><b>@Model.CancelledOrdersCount.ToString("F0")</b>/@Model.OrdersCount.ToString("F0")</span>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-primary" style="width: @Model.CancelledOrdersCount.ToString("F0")%"></div>
                            </div>
                        </div>
                        <div class="progress-group">
                            <h5>Всички Поръчки - <strong>@Model.OrdersCount.ToString("F0")</strong></h5>
                        </div>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a asp-controller="Order" asp-action="All" class="small-box-footer">Виж повече <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-6 col-6">

                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="card-title">Поръчки за деня</h3>
                        <div class="card-tools">
                            <a href="#" class="btn btn-sm btn-tool">
                                <i class="fas fa-download"></i>
                            </a>
                            <a href="#" class="btn btn-sm btn-tool">
                                <i class="fas fa-bars"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                            <p class="text-success text-xl">
                                <i class="ion-android-clipboard"></i>
                            </p>
                            <p class="d-flex flex-column text-right">
                                <span class="font-weight-bold">
                                    @Model.OrdersCount
                                </span>
                                <span class="text-muted">Брой Поръчки</span>
                            </p>
                        </div>

                        <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                            <p class="text-success text-xl">
                                <i class="ion ion-android-car"></i>
                            </p>
                            <p class="d-flex flex-column text-right">
                                <span class="font-weight-bold">
                                    @Model.DeliverySells.ToString("F2") лв.
                                </span>
                                <span class="text-muted">Транспорт Поръчки</span>
                            </p>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-0">
                            <p class="text-success text-xl">
                                <i class="fa fa-money"></i>
                            </p>
                            <p class="d-flex flex-column text-right">
                                <span class="font-weight-bold">
                                    @Model.TotalSells.ToString("F2") лв.
                                </span>
                                <span class="text-muted">Сума Поръчки</span>
                            </p>
                        </div>

                    </div>


                </div>

                <div class="card">
                    <div class="card-header border-0">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">Online Store Visitors</h3>
                            <a href="javascript:void(0);">View Report</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex">
                            <p class="d-flex flex-column">
                                <span class="text-bold text-lg">820</span>
                                <span>Visitors Over Time</span>
                            </p>
                            <p class="ml-auto d-flex flex-column text-right">
                                <span class="text-success">
                                    <i class="fas fa-arrow-up"></i> 12.5%
                                </span>
                                <span class="text-muted">Since last week</span>
                            </p>
                        </div>

                        <div class="position-relative mb-4">
                            <div class="chartjs-size-monitor">
                                <div class="chartjs-size-monitor-expand">
                                    <div class=""></div>
                                </div>
                                <div class="chartjs-size-monitor-shrink">
                                    <div class=""></div>
                                </div>
                            </div>
                            <canvas id="visitors-chart" height="200" width="609" style="display: block; width: 609px; height: 200px;" class="chartjs-render-monitor"></canvas>
                        </div>
                        <div class="d-flex flex-row justify-content-end">
                            <span class="mr-2">
                                <i class="fas fa-square text-primary"></i> This Week
                            </span>
                            <span>
                                <i class="fas fa-square text-gray"></i> Last Week
                            </span>
                        </div>
                    </div>
                </div>

            </div>

            <!-- ./col -->
            <div class="col-lg-6 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.TotalSells.ToString("F2")<sup style="font-size: 20px">лв</sup></h3>
                        <p>Дневен оборот</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">Виж повече <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>


            <!-- ./col -->
        </div>
        <!-- /.row -->

    </div><!-- /.container-fluid -->
</section>


<hr />
<div class="row">
    <div class="col-md-4">
        <a class="btn btn-primary" asp-controller="Admin" asp-action="Index">Start</a>
    </div>
</div>



