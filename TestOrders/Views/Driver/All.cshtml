@model List<DriverViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All</h1>

<div>
    <h4>Order</h4>
    <hr />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Снимка</th>
                <th>Име</th>
                <th>Телефон</th>
                <th>Кола / Номер</th>
                <th>Тип кола</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var driver in Model)
            {
                <tr>
                    <td>
                        <img src="@driver.CarUrl" class="rounded" alt="@driver.Name" width="50">
                    </td>
                    <td>@driver.Name</td>
                    <td>@driver.PhoneNumber</td>
                    <td>@driver.CarModel / @driver.CarNumber</td>
                    <td>@driver.CarType</td>
                    <td>@driver.Status</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@driver.Id">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@driver.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>